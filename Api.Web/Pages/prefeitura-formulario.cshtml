@page "/prefeitura/formulario/{id?}"
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor"><span id="tipo-formulario"></span> Prefeitura</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a id="inicio" href="/">Início</a></li>
                <li class="breadcrumb-item"><a id="inicio" href="/prefeitura">Prefeitura</a></li>
                <li class="breadcrumb-item active">Registro de Prefeitura</li>
            </ol>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12 col-sm-12">
                    <div class="alert alert-sm alert-danger" id="alert-erro" style="display:none;margin-top:10px;"></div>
                </div>
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 mb-6">
                        <h6 class="card-title col-md-12 no-padding required">Nome Prefeitura:</h6>
                        <div class="input-group">
                            <input class="form-control" type="text" name="nome_Prefeitura" id="nome_Prefeitura">
                            <button class="btn btn-secondary" onclick="$('#nome_Prefeitura').val('')" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 mb-6">
                        <h6 class="card-title col-md-12 no-padding required">Endereço:</h6>
                        <div class="input-group">
                            <input class="form-control" type="text" name="endereco" id="endereco">
                            <button class="btn btn-secondary" onclick="$('#endereco').val('')" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 mb-6">
                        <h6 class="card-title col-md-12 no-padding required">Descrição:</h6>
                        <div class="input-group">
                            <input class="form-control" type="text" name="descricao" id="descricao">
                            <button class="btn btn-secondary" onclick="$('#descricao').val('')" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 mb-6">
                        <h6 class="card-title col-md-12 no-padding required">Cnpj:</h6>
                        <div class="input-group">
                            <input class="form-control" type="text" name="cgc" id="cgc" data-mascara="cnpj">
                            <button class="btn btn-secondary" onclick="$('#cgc').val('')" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 mb-12">
                    <div class="input-group mt-4">
                        <h6 class="card-title" style="margin-top: 6px;">Ativo:</h6>
                        <input type="checkbox" class="form-control" id="status" name="status" checked>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 text-right mt-2">
                    <button type="button" class="btn btn-secondary col-lg-2 col-md-12 pull-right" onclick="window.location.href='/prefeitura';" style="margin-right: 10px;">Cancelar</button>
                    <button type="submit" class="btn btn-success col-lg-2 col-md-12 pull-right" id="btn-submit" onclick="salvar(this);">Salvar</button>
                </div>

            </div>
        </div>
    </div>
</div>
</div>
@section Scripts {
<script src="~/js/pages/prefeitura-formulario.js"></script>
}