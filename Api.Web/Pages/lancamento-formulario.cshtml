@page "/lancamento/formulario/{id?}"
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor"><span id="tipo-formulario"></span> Lançamento</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a id="inicio" href="/">Início</a></li>
                <li class="breadcrumb-item"><a id="inicio" href="/lancamento">Lançamento</a></li>
                <li class="breadcrumb-item active">Registro de Lançamento</li>
            </ol>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
				<div class="col-md-12 col-sm-12">
					<div class="alert alert-sm alert-danger" id="alert-erro" style="display:none;margin-top:10px;"></div>
				</div>
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 mb-6">
                        <h6 class="card-title col-md-12 no-padding required">Caixa:</h6>
                        <div class="input-group">
                            <input class="form-control" type="text" name="caixa" id="caixa">
                            <button class="btn btn-secondary" onclick="$('#caixa').val('')" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 mb-6">
                        <h6 class="card-title col-md-12 no-padding required">Prateleira:</h6>
                        <div class="input-group">
                            <input class="form-control" type="text" name="prateleira" id="prateleira">
                            <button class="btn btn-secondary" onclick="$('#prateleira').val('')" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                   <div class="col-xl-6 col-lg-6 col-md-6">
                        <h6 class="card-title col-md-12 no-padding required">Assunto:</h6>
                        <div class="input-group flex-nowrap">
                            <select class="form-control js-example-basic-single" id="assuntoId" name="assuntoId">
                           
                            </select>
                            <button class="btn btn-secondary" onclick="$('#assuntoId').val(''); $('#assuntoId').select2(); BuscaConsulta();" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6">
                        <h6 class="card-title col-md-12 no-padding required">Secretaria:</h6>
                        <div class="input-group flex-nowrap">
                            <select class="form-control js-example-basic-single" id="secretariaId" name="secretariaId">
                           
                            </select>
                            <button class="btn btn-secondary" onclick="$('#secretariaId').val(''); $('#secretariaId').select2(); BuscaConsulta();" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6">
                        <h6 class="card-title col-md-12 no-padding required">Departamento:</h6>
                        <div class="input-group flex-nowrap">
                            <select class="form-control js-example-basic-single" id="departamentoId" name="departamentoId">
                           
                            </select>
                            <button class="btn btn-secondary" onclick="$('#departamentoId').val(''); $('#departamentoId').select2(); BuscaConsulta();" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 mb-6">
                        <h6 class="card-title col-md-12 no-padding required">Descrição:</h6>
                        <div class="input-group">
                            <input class="form-control" type="text" name="descricao" id="descricao">
                            <button class="btn btn-secondary" onclick="$('#descricao').val('')" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                      <div class="col-xl-6 col-lg-6 col-md-6 mb-6">
                        <h6 class="card-title col-md-12 no-padding required">Data Lançamento:</h6>
                        <div class="input-group">
                            <input class="form-control" type="date"  value="@DateTime.Now.ToString("yyyy-MM-dd")" name="data" id="data">
                            <button class="btn btn-secondary" onclick="$('#data').val('');BuscaConsulta();" type="button" alt="default">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-2 col-md-2 mb-12">
                        <div class="input-group mt-4">
                            <h6 class="card-title" style="margin-top: 6px;">Ativo:</h6>
                            <input type="checkbox" class="form-control" id="status" name="status" checked>
                        </div>
                    </div>
                    <div class="col-md-12 col-sm-12 text-right mt-2">
                        <button type="button" class="btn btn-secondary col-lg-2 col-md-12 pull-right" onclick="window.location.href='/lancamento';" style="margin-right: 10px;">Cancelar</button>
                        <button type="submit" class="btn btn-success col-lg-2 col-md-12 pull-right" id="btn-submit" onclick="salvar(this);">Salvar</button>
                    </div>
                  
                </div>
            </div>
        </div>
    </div>
</div>
            @section Scripts {
<script src="~/js/pages/lancamento-formulario.js"></script>
            }
